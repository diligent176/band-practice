{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: webapp/app.py",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "cwd": "${workspaceFolder}/webapp",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "FLASK_APP": "webapp/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--host=0.0.0.0", "--port=8080", "--debug"],
      "jinja": true
    }
  ]
}
