{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: webapp/app.py",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      // "program": "${workspaceFolder}/webapp/app.py",
      "cwd": "${workspaceFolder}/webapp",
      // "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "FLASK_APP": "webapp/app.py"
      },
      // "args": ["run", "--host=0.0.0.0", "--port=8080", "--debug"],
      "args": ["run", "--host=localhost", "--port=8080"],
      "jinja": true
    }
  ]
}
