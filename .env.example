# Band Practice App Configuration
# Copy this file to .env and fill in your values

# ============================================
# GCP Configuration
# ============================================
GCP_PROJECT_ID=band-practice-pro
GCP_REGION=us-west1

# ============================================
# Spotify API Credentials
# Get these from: https://developer.spotify.com/dashboard
# ============================================
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_PLAYLIST_URL=https://open.spotify.com/playlist/YOUR_PLAYLIST_ID

# ============================================
# Genius API Credentials
# Get these from: https://genius.com/api-clients
# ============================================
GENIUS_ACCESS_TOKEN=your_genius_access_token_here

# ============================================
# Flask Configuration
# ============================================
# Generate a random secret key (e.g., use: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-random-secret-key-here
FLASK_ENV=development
